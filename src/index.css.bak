
.repos {
  height: auto;
  margin: 0;
  padding: 20px;
  list-style: none;
}

.repos__item {
  position: relative;
  margin-bottom: 30px;
  text-indent: 0;
  text-align: center;
  background-color: #fff;
  border-radius: 4px;
  box-shadow: 0 1px 1px 0 rgba(60,64,67,.08),
    0 1px 3px 1px rgba(60,64,67,.16);
}
.repos__item > a {
  display: block;
  padding: 15px 25px 30px;
  text-decoration: none;
  color: var(--color-dark-primary);
}
.repos__item a:visited,
.repos__item a:visited .item-details {
  color: var(--color-grey-primary);
}
.repos__item a:visited .item-button {
  background-color: var(--color-grey-primary);
}

.repos__item h3 {
  margin: 0;
  font-size: 18px;
  font-weight: 300;
}
.repos__item h3 > strong {
  font-weight: bold;
  /* display: block; */
}
.repos__item p {
  position: relative;
  font-size: 16px;
  line-height: 24px;
  padding-bottom: 15px;
  margin: 10px 0 15px;
}
.repos__item p:after {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  content: ' ';
  width: 100px;
  height: 1px;
  background-color: var(--color-grey-secondary);
}

.repos__item--devs {
  padding: 0;
  margin-bottom: 15px;
}
.repos__item--devs > a {
  overflow: auto;
  padding: 15px;
}
.repos__item--devs img {
  float: left;
  margin-right: 15px;
  max-width: 100px;
  border-radius: 4px;
}
.repos__item--devs p {
  float: left;
  width: calc(100% - 130px);
  text-align: left;
  color: var(--color-dark-secondary);
  margin: 0;
  padding: 0;
}
.repos__item--devs p:first-of-type {
  margin-bottom: 5px;
  padding: 0 0 5px;
  border-bottom: 1px solid var(--color-grey-tertiary);
  font-weight: bold;
}
.repos__item--devs p:last-of-type {
  font-size: 14px;
}
.repos__item--devs p:after {
  background: transparent;
}
.repos__item--devs p > span {
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #222;
}

.item-details {
  display: flex;
  font-size: 12px;
  color: #333;
}

.item-details > span {
  flex: 1;
}

.item-button {
  position: absolute;
  bottom: -10px;
  left: 50%;
  transform: translateX(-50%);
  padding: 7px 15px;
  border: 0;
  border-radius: 50px;
  font-size: 12px;
  background: var(--color-dark-tertiary);
  color: #fff;
  cursor: pointer;
  outline: none;
  box-shadow: 0 1px 1px 0 rgba(60,64,67,.08),
    0 1px 3px 1px rgba(60,64,67,.16);
}

/* modal component */
.ReactModal__Html--open,
.ReactModal__Body--open {
  overflow: hidden;
}

.ReactModal__Overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(225, 225, 225, .8);
  opacity: 0;
  transform: translateY(75%);
  transition: all 350ms ease-in-out;
}
.ReactModal__Overlay--after-open {
  opacity: 1;
  transform: translateY(0);
}
.ReactModal__Overlay--before-close {
  opacity: 0;
  transform: translateY(75%);
}

.ReactModal__Content {
   position: absolute;
   top: 20px;
   left: 20px;
   right: 20px;
   bottom: 20px;
   border: 1px solid var(--color-grey-quaternary);
   background: #fff;
   overflow: auto;
   border-radius: 5px;
   outline: none;
   padding: 20px 20px 40px;
}
.ReactModal__Content * {
  max-width: 100%;
}
.ReactModal__Content button {
  position: absolute;
  top: 7px;
  right: 7px;
  width: 32px;
  height: 32px;
  line-height: 32px;
  font-size: 25px;
  text-align: center;
  color: #fff;
  background: var(--color-dark-tertiary);
  border-radius: 50%;
  border: 0;
  outline: none;
}
.ReactModal__Content pre {
  overflow: auto;
  padding: 7px 10px;
  line-height: 1.5;
  background-color: rgb(245, 245, 245);
  border-radius: 5px;
}
.ReactModal__Content table {
  font-size: 12px;
  border-collapse: collapse;
}
.ReactModal__Content table td,
.ReactModal__Content table th {
  border: 1px solid #dfe2e5;
  padding: 3px;
  text-align: left; 
}
.ReactModal__Content ul {
  padding-left: 20px;
}
.ReactModal__Content blockquote {
  margin: 0; 
  padding: 0 1em;
  color: #6a737d;
  border-left: 0.25em solid #dfe2e5;
}

/* Loading */
.spinner {
  margin: 100px auto;
  width: 40px;
  height: 40px;
  position: relative;
}

.cube1, .cube2 {
  background-color: var(--color-dark-primary);
  width: 15px;
  height: 15px;
  position: absolute;
  top: 0;
  left: 0;
  
  -webkit-animation: sk-cubemove 1.8s infinite ease-in-out;
  animation: sk-cubemove 1.8s infinite ease-in-out;
}

.cube2 {
  -webkit-animation-delay: -0.9s;
  animation-delay: -0.9s;
}

@-webkit-keyframes sk-cubemove {
  25% { -webkit-transform: translateX(42px) rotate(-90deg) scale(0.5) }
  50% { -webkit-transform: translateX(42px) translateY(42px) rotate(-180deg) }
  75% { -webkit-transform: translateX(0px) translateY(42px) rotate(-270deg) scale(0.5) }
  100% { -webkit-transform: rotate(-360deg) }
}

@keyframes sk-cubemove {
  25% { 
    transform: translateX(42px) rotate(-90deg) scale(0.5);
    -webkit-transform: translateX(42px) rotate(-90deg) scale(0.5);
  } 50% { 
    transform: translateX(42px) translateY(42px) rotate(-179deg);
    -webkit-transform: translateX(42px) translateY(42px) rotate(-179deg);
  } 50.1% { 
    transform: translateX(42px) translateY(42px) rotate(-180deg);
    -webkit-transform: translateX(42px) translateY(42px) rotate(-180deg);
  } 75% { 
    transform: translateX(0px) translateY(42px) rotate(-270deg) scale(0.5);
    -webkit-transform: translateX(0px) translateY(42px) rotate(-270deg) scale(0.5);
  } 100% { 
    transform: rotate(-360deg);
    -webkit-transform: rotate(-360deg);
  }
}